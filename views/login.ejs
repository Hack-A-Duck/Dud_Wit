<%- include("partials/header1"); -%>
<link rel="stylesheet" href="/css/loginstyle.css">

</head>

<body>
	<div class="logey">
		<h2>BLOGBOWER Get Going!</h2>
		<div class="container1" id="container1">
			<div class="form-container sign-up-container">
				<form action="/users/signUp" method="post">
					<h1>Create Account</h1>
					<div class="social-container">
						<!-- <a href="#" class="social"><i class="far fa-eye"></i></a> -->
						<a href="/users/google" class="social"><i class="fab fa-google"></i></a>
						<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
					</div>
					<span>or use your email for registration</span>
					<input class="emailin" type="text" name="name" placeholder="Name" required/>
					<input class="emailin" type="email" name="email" placeholder="Email" required/>
					<input class="emailin pass" type="password" name="password" placeholder="Password" required/>
					<i class="passview far fa-eye-slash"></i>
					<input class="emailin" type="text" name="penName" placeholder="PenName" required/>
					<p>*cannot be changed later</p>
					<input class="emailin" type="text" name="age" placeholder="Age" required/>
					<input class="emailin" type="text" list="genders" placeholder="SEX">
					<datalist id="genders">
						<option value="MALE">
						<option value="FEMALE">
						<option value="OTHER">
					</datalist>
					<button>Sign Up</button>
				</form>
			</div>
			<div class="form-container sign-in-container">
			<form action="/users/signIn" method="post">
			<h1>Sign in</h1>
			<div class="social-container">
				<!-- <a href="#" class="social"><i class="fa fa-fw fa-facebook"></i></a> -->
				<a href="/users/google" class="social"><i class="fab fa-google"></i></a>
				<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
			</div>
			<span>or use your account</span>
			<input class="emailin" type="text" name="penName" placeholder="Pen Name" />
			<input class="emailin pass" type="password" name="password" placeholder="Password" /><i class="passview far fa-eye-slash"></i><br>
			<a href="/forgotPassword">Forgot your password?</a>
			<button>Sign In</button>
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Welcome Back!</h1>
				<p>To keep connected with us please login with your personal info</p>
				<button class="ghost" id="signIn">Sign In</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Hello, Friend!</h1>
				<p>Enter your personal details and start journey with us</p>
				<button class="ghost" id="signUp">Sign Up</button>
			</div>
		</div>
	</div>
</div>
</div>

<script src="/js/log.js"></script>
<%- include("partials/footer1"); -%>